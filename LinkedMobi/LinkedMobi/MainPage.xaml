<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LinkedMobi"
             x:Class="LinkedMobi.MainPage">
    <StackLayout>
        <Label Text="Linkedin" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" 
           FontSize="Large"/>

        <Label Text="Connect to Opportunity" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" 
           FontSize="Large"/>

        <Label Text="...." 
           VerticalOptions="Center" 
           HorizontalOptions="Center" 
           FontSize="Large"/>
        

        <Button Text="JOIN NOW" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" 
                Clicked="SignupButton_Clicked"/>

        <Button Text="SIGN IN" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" 
           FontSize="Small" Clicked="SignInButton_Clicked"/>
    </StackLayout>
	
</ContentPage>